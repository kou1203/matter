<%= render "shared/header" %>

<div class="main">
  <%= render "shared/side_bar" %>
  <main class="right-bar">
  <h1 class="show-title"><%= @store_prop.name %>情報入力（auペイ）</h1>
      
  <%= form_with url: import_aupays_path do |f| %>
    <table class="table">
      <tr>
        <td class="import-choose"><%= f.label :file, "CSV取り込み",class:"import-label" %></td>
        <td class="import-choose"><%= f.file_field :file, accept: ".csv", class: "import-file" %></td>
        <td class="import-result"><%= f.submit  "インポート", class: "import-btn",data: { confirm: 'インポートしますか？' } %></td>
        <td class="search-reset"><%= link_to "店舗一覧に戻る", root_path ,class: "reset-link" %></td>
      </tr>
    </table>
  <% end %>
  <%= form_with model: @aupay,url: store_prop_aupays_create_path(@store_prop.id),  class: "form-frame", local: true do |f| %>
    <table class="table">
    <%= render "shared/error_messages", model: f.object %>
        <%= f.hidden_field :store_prop_id, value: @store_prop.id %>
    <tr>
      <th>
        <div class="form-interval">
          <%= f.label :user_id, "獲得者", class: "form-text" %><span class="note">（※必須）</span><br>
        <%= f.collection_select(:user_id, @users, :id, :name,{}, {class: "form-input"})%>
        </div>
      </th>
      <th>
        <div class="form-interval">
          <%= f.label :get_date, "獲得日", class: "form-text" %><span class="note">（※必須）</span><br>
          <%= f.date_field :get_date , class: "form-input" %>
        </div>
      </th>
      <th>
        <div class="form-interval">
          <%= f.label :customer_num, "お客様番号", class: "form-text" %><span class="note">（※必須）</span><br>
          <%= f.text_field :customer_num , class: "form-input" %>
        </div>
      </th>
      <th>
        <div class="form-interval">
          <%= f.label :client, "商流", class: "form-text" %><span class="note">（※必須）</span><br>
          <%= f.select :client, {"メルヴェイユ": "メルヴェイユ"} ,{}, {class: "form-input"} %>
        </div>
      </th>
    
    <th>
      <div class="form-interval">
        <%= f.label :status, "審査ステータス", class: "form-text" %><span class="note">（※必須）</span><br>
        <%= f.select :status, {"未審査": "未審査", "自社不備": "自社不備","上位店NG": "上位店NG", "審査完了": "審査完了",
        "決済完了": "決済完了", "入金確認済": "入金確認済"} ,{}, {class: "form-input"} %>
      </div>
    </th>
    </tr>
    <tr>

    <th>
      <div class="form-interval">
        <%= f.label :valuation_profit, "評価売上", class: "form-text" %><br>
        <%= f.number_field :valuation_profit , class: "form-input" %>
      </div>
    </th>

    <th>
      <div class="form-interval">
        <%= f.label :actual_profit, "実売上", class: "form-text" %><br>
        <%= f.number_field :actual_profit , class: "form-input" %>
      </div>
    </th>
    
    <th>
      <div class="form-interval">
        <%= f.label :settlement, "決済日", class: "form-text" %><br>
        <%= f.date_field :settlement , class: "form-input" %>
      </div>
    </th>
    
    <th>
      <div class="form-interval">
        <%= f.label :payment, "入金日", class: "form-text" %><br>
        <%= f.date_field :payment , class: "form-input" %>
      </div>
    </th>
    
    <th>
      <div class="form-interval">
        <%= f.label :description, "備考", class: "form-text" %><br>
        <%= f.text_field :description , class: "form-input" %>
      </div>
    </th>
    </tr>

</table>
    <%= f.submit "登録", class: "form-btn" %>
  
  <% end %>
  </main>
</div>