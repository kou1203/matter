
<div data-scope-path="shared/header">
  <%= render "shared/header" %>
  <h1>auペイ詳細</h1>
</div>
<div style="display:flex;">
<div data-scope-path="shared/side_bar">
  <%= render "shared/sidebar" %>
</div>
<div class="main">
<div data-scope-path="aupays/show">
    <table>
    <tr>
      <th colspan="4">店舗詳細</th>
    </tr>
    <tr>
    <th >店舗名</th>
    <td ><%= @aupay.store_prop.name %></td>
    <th >属性</th>
    <td ><%= @aupay.store_prop.race %></td>
    </tr>
    <th >業種</th>
    <td ><%= @aupay.store_prop.industry %></td>
    <th >本店名</th>
    <td ><%= @aupay.store_prop.head_store %></td>
    <tr>
    </tr>
    <tr>
    <th >店舗代表</th>
    <td ><%= @aupay.store_prop.person_main_name %></td>
    <th >店舗担当</th>
    <td ><%= @aupay.store_prop.person_sub_name %></td>
    </tr>
    <tr>
      <th >店舗住所</th>
    <td colspan="3"><%= @aupay.store_prop.prefecture %><%= @aupay.store_prop.city %><%= @aupay.store_prop.municipalities %><%= @aupay.store_prop.address %><%= @aupay.store_prop.building_name %></td>
    </tr>
    </table>
    <table >
    </table>
    <h1 >連絡先</h1>
    <table >
    <th >電話番号1</th>
    <td ><%= @aupay.store_prop.phone_number_1 %></td>
    <th >電話番号2</th>
    <td ><%= @aupay.store_prop.phone_number_2 %></td>
    </tr>
    <tr>
    <th >メールアドレス１</th>
      <td ><%= @aupay.store_prop.mail_1 %></td>
    <th >メールアドレス２</th>
      <td ><%= @aupay.store_prop.mail_2 %></td>
    </tr>
    <tr>
    <th >好適時間</th>
    <td ><%= @aupay.store_prop.suitable_time %></td>
    <th >定休日</th>
    <td ><%= @aupay.store_prop.holiday %></td>
    </tr>
    <tr>
    <th>備考</th>
    <td colspan="2"><%= @aupay.store_prop.description %></td>
    <td ><%= link_to "店舗情報編集", edit_store_prop_path(@aupay.store_prop.id), class: "link" %></td>
    </tr>
    </table>
    <h1 >auペイ情報</h1>
    <table >
    <tr>
    <th >獲得日</th>
      <td ><%= @aupay.date %></td>
      <th >獲得者</th>
      <td ><%= @aupay.user.name %></td>
    </tr>
    <tr>
      <th >管理番号</th>
      <td ><%= @aupay.customer_num %></td>
      <th >商流</th>
      <td ><%= @aupay.client %></td>
    </tr>
    <tr>
      <th >新規ステータス</th>
      <td ><%= @aupay.status %></td>
      <th >新規ステータス更新日</th>
      <td ><%= @aupay.status_update %></td>
    </tr>
    <tr>
      <th >不備発生日</th>
      <td ><%= @aupay.deficiency %></td>
      <th >不備解消日</th>
      <td ><%= @aupay.deficiency_solution %></td>
    <tr>
    <tr >
      <th >不備解消期限</th>
      <td ><%= @aupay.deficiency_deadline %></td>
      <th colspan="2"></th>
    </tr>
      <th>不備詳細</th>
      <td colspan="3"><%= @aupay.deficiency_remarks %></td>
    </tr>
    </tr>
      <th>備考</th>
      <td colspan="3"><%= @aupay.description %></td>
    </tr>
  </table>
  <h1>決済情報</h1>
  <table>
    <tr>
      <th >決済日</th>
      <td ><%= @aupay.settlement %></td>
      <th >アクセプタンスアップロード日</th>
      <td ><%= @aupay.picture %></td>
    </tr>
    <tr>
      <th >決済者</th>
      <td ><%= @aupay.settlementer.name rescue "" %></td>
      <th >決済期限</th>
      <td ><%= @aupay.settlement_deadline %></td>
    </tr>
    <tr>
      <th >決済ステータス</th>
      <td ><%= @aupay.status_settlement %></td>
      <th >決済ステータス更新日</th>
      <td ><%= @aupay.status_update_settlement %></td>
    </tr>
    <tr>
      <th >不備発生日</th>
      <td ><%= @aupay.deficiency_settlement %></td>
      <th >不備解消日</th>
      <td ><%= @aupay.deficiency_solution_settlement %></td>
    <tr>
    <tr>
      <th >不備詳細</th>
      <td colspan="2"><%= @aupay.deficiency_remarks_settlement %></td>
      <td ><%= link_to "aupay情報編集", edit_aupay_path, class: "link" %></td>
    </tr>
  </table>
  <h1>入金日/利益</h1>
  <table>
    <tr>
      <th>審査完了日（新規）</th>
      <td ><%= @aupay.result_point %></td>
      <th>審査完了日（決済）</th>
      <td ><%= @aupay.result_point_settlement %></td>
    </tr>
    <tr>
      <th >入金日（新規）</th>
      <td ><%= @aupay.payment %></td>
      <th >入金日（決済）</th>
      <td ><%= @aupay.payment_settlement %></td>
    </tr>
    <tr>
      <th >評価売上（新規）</th>
      <td ><%= @aupay.valuation_new %></td>
      <th >評価売上（決済）</th>
      <td ><%= @aupay.valuation_settlement %></td>
    </tr>
    <% if current_user.position == "権限①" %>
    <tr>
      <th >実売上（新規）</th>
      <td ><%= @aupay.profit_new %></td>
      <th >実売上（決済）</th>
      <td ><%= @aupay.profit_settlement %></td>
    </tr>
    <% else %>
    <% end %>
    </table>
  </div>
  </div>
</div>

