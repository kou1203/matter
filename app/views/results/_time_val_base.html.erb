<%# 拠点別時間基準値 %>
<div><%# 拠点別 %>

  <h2>拠点別時間別基準値（<%= @time_base %>）</h2>
  <table class="out-tb">
    <thead>
      <tr>
        <th class="total-th">時間</th>
        <th class="total-th">内訳</th>
        <th class="total-th">平均</th>
        <th class="total-th">成約率</th>
      </tr>
    </thead>
    <tbody>
      <% 10.times do |i| %>
      <tr>
        <th rowspan="2" class="total-th"><%= i + 10 %>時</th>
        <th class="total-th">訪問</th>
        <td class="total-td"><%= (@results_base.sum("visit#{ i + 10}").to_f / @results_base.length).round(2) %></td>
        <td class="total-td">-</td>
      </tr>
      <tr>
        <th class="total-th">成約</th>
        <td class="total-td"><%= (@results_base.sum("get#{ i + 10}").to_f / @results_base.length).round(2) %></td>
        <td class="total-td">
          <%= ((@results_base.sum("get#{ i + 10}").to_f / @results_base.length) / (@results_base.sum("visit#{ i + 10}").to_f / @results_base.length) * 100).round() %>％
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>