<div data-scope-path="shared/header">
  <h1><%= @activity_base.user.name %>活動拠点編集</h1>
  <%= render "shared/header" %>
</div>
<div style="display:flex;"><%# フレックス %>
  <div data-scope-path="shared/side_bar">
    <%= render "shared/sidebar" %>
  </div>
  <div data-scope-path="shared/form"><%# CSSスコープ %>
    <div class="form-main"><%# フォーム外枠 %>
      <div class="form-title">
        <h2>獲得情報</h2>
      </div>
      <%= form_with model: @activity_base,  class: "form-frame", local: true do |f| %>
        <%= render "shared/error_messages", model: f.object %>
        <div class="form">
            <p><%= f.label :base, "拠点", class: "form-text" %></p>
            <p><%= f.collection_select(:base, ActivityBase.group(:base), :base, :base,{}, {class: "slct-input"}) %></p>
        </div>
        <div class="form">
            <p><%= f.label :position, "役職", class: "form-text" %></p>
            <p><%= f.collection_select(:position, User.group(:position_sub), :position_sub, :position_sub,{}, {class: "slct-input"}) %></p>
        </div>
        <div class="form">
            <p><%= f.label :date, "獲得日", class: "form-text" %></p>
            <p><%= f.date_field :date,class: "date-input" %></p>
        </div>
    </div><%# フォーム外枠 %>
        <div class="form-submit">
            <%= f.submit "登録", class: "submit-btn",data: { confirm: "登録してもよろしいですか？" }  %>
        </div>
    <% end %>
  </div><%# CSSスコープ %>
</div><%# フレックス %>

