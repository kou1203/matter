<div data-scope-path="dmers/new">
  <h1 ><%= @store_prop.name %>情報入力（dメル）</h1>
  <%= render "shared/header" %>

  <%= form_with url: import_dmers_path do |f| %>
    <table>
      <tr>
        <th class="csv">CSV取り込み</th>
        <td class="cav-td"><%= f.file_field :file, accept: ".csv", class: "csv-td" %></td>
        <td class="result"><%= f.submit  "インポート", class: "result-btn",data: { confirm: 'インポートしますか？' } %></td>
        <td class="reset"><%= link_to "店舗一覧に戻る", root_path ,class: "reset-link" %></td>
      </tr>
    </table>
  <% end %>

  <%= form_with model: @dmer,url: store_prop_dmers_create_path(@store_prop.id),  class: "form-frame", local: true do |f| %>
    <%= render "shared/error_messages", model: f.object %>
    <%= f.hidden_field :store_prop_id, value: @store_prop.id %>
    <h1>獲得情報</h1>
    <table>
      <tr>
        <th><%= f.label :client, "商流", class: "form-text" %></th>
        <th><%= f.label :customer_num, "お客様番号", class: "form-text" %></th>
        <th><%= f.label :user_id, "獲得者", class: "form-text" %></th>
        <th><%= f.label :date, "獲得日", class: "form-text" %></th>
        
      </tr>
      <tr>
        <td><%= f.select :client, {"マックスサポート": "マックスサポート", "USEN": "USEN","メルヴェイユ": "メルヴェイユ","ウィンクルム": "ウィンクルム",} ,{}, {class: "form-input"} %></td>
        <td><%= f.text_field :customer_num , class: "form-input" %></td>
        <td><%= f.collection_select(:user_id, @users, :id, :name,{}, {class: "form-input"})%></td>
        <td><%= f.date_field :date , class: "form-input" %></td>
        
      </tr>

      <tr>
        <th><%= f.label :status, "審査ステータス", class: "form-text" %></th>
        <th><%= f.label :date, "ステータス更新日", class: "form-text" %></th>
        <th><%= f.label :status_settlement, "決済審査ステータス", class: "form-text" %></th>
        <th><%= f.label :status_update_settlement, "決済ステータス更新日", class: "form-text" %></th>

      </tr>
      <tr>
        <td><%= f.select :status, {"未審査": "未審査", "審査中": "審査中", "審査完了": "審査完了", "自社不備": "自社不備", "上位店不備": "上位店不備", "自社NG": "自社NG", "上位店NG": "上位店NG", "申込取消": "申込取消"} ,{}, {class: "form-input"} %></td>
        <td><%= f.date_field :status_update, value: Date.today, class: "form-input" %></td>
        <td><%= f.select :status_settlement, {"未審査": "未審査", "審査中": "審査中", "審査完了": "審査完了", "自社不備": "自社不備", "上位店不備": "上位店不備", "自社NG": "自社NG", "上位店NG": "上位店NG", "申込取消": "申込取消"} ,{}, {class: "form-input"} %></td>
        <td><%= f.date_field :status_update_settlement , class: "form-input" %></td>
      </tr>
      <tr>
        
        <th><%= f.label :settlementer_id, "決済者", class: "form-text" %></th>
        <th><%= f.label :settlement, "初回決済日", class: "form-text" %></th>
        <th><%= f.label :settlement_deadline, "決済期限", class: "form-text" %></th>
      </tr>
      <tr>
        
        <td><%= f.collection_select(:settlementer_id, @users, :id, :name,{include_blank: true}, {class: "form-input"})%></td>
        <td><%= f.date_field :settlement , class: "form-input" %></td>
        <td><%= f.date_field :settlement_deadline , class: "form-input" %></td>

      </tr>
      <tr>
        <th><%= f.label :payment, "新規入金日", class: "form-text" %></th>
        <th><%= f.label :payment_settlement , "決済入金日", class: "form-text" %></th>
        <th><%= f.label :description, "備考", class: "form-text" %></th>
      </tr>
      <tr>
        <td><%= f.date_field :payment , class: "form-input" %></td>
        <td><%= f.date_field :payment_settlement , class: "form-input" %></td>
        <td><%= f.text_field :description , class: "form-input" %></td>
      </tr>

      <tr>
        <th><%= f.label :valuation_new, "評価売上（新規）", class: "form-text" %></th>
        <th><%= f.label :valuation_settlement, "評価売上（決済）", class: "form-text" %></th>
        <th><%= f.label :profit_new, "実売上（新規）", class: "form-text" %></th>
        <th><%= f.label :profit_settlement, "実売上（決済）", class: "form-text" %></th>
      </tr>
      <tr>
        <td><%= f.number_field :valuation_new , class: "form-input" %></td>
        <td><%= f.number_field :valuation_settlement , class: "form-input" %></td>
        <td><%= f.number_field :profit_new , class: "form-input" %></td>
        <td><%= f.number_field :profit_settlement , class: "form-input" %></td>
      </tr>
    </table>
      <%= f.submit "登録", class: "submit-btn" %>
  <% end %>
</div>

