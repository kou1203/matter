<div data-scope-path="dmers/show">
    <h1 >dメル詳細</h1>
<%= render "shared/header" %>


    <table >
    <tr>
      <th colspan="4">店舗情報</th>
    </tr>
    <tr>
    <th >店舗名</th>
    <td ><%= @dmer.store_prop.name %></td>
    <th >属性</th>
    <td ><%= @dmer.store_prop.race %></td>
    </tr>
    <th >業種</th>
    <td ><%= @dmer.store_prop.industry %></td>
    <tr >
    </tr>
    <tr >
    <th >店舗代表</th>
    <td ><%= @dmer.store_prop.person_main %></td>
    <th >店舗担当</th>
    <td ><%= @dmer.store_prop.person_sub %></td>
    </tr>
    <tr >
    <th >店舗住所</th>
    <td colspan="3"><%= @dmer.store_prop.prefecture %><%= @dmer.store_prop.city %><%= @dmer.store_prop.municipalities %><%= @dmer.store_prop.address %><%= @dmer.store_prop.building_name %></td>
    </table>
    <h1 >連絡先</h1>
    <table >
    <tr>
    <th >電話番号1</th>
    <td ><%= @dmer.store_prop.phone_number_1 %></td>
    <th >電話番号2</th>
    <td ><%= @dmer.store_prop.phone_number_2 %></td>
    </tr>
    <tr >
    <th >メールアドレス１</th>
      <td ><%= @dmer.store_prop.mail_1 %></td>
    <th >メールアドレス２</th>
      <td ><%= @dmer.store_prop.mail_2 %></td>
    </tr>
    <tr >
    <th >好適時間</th>
    <td ><%= @dmer.store_prop.suitable_time %></td>
    <th >定休日</th>
    <td ><%= @dmer.store_prop.holiday %></td>
    </tr>
    <tr >
    <th >備考</th>
    <td colspan="2"><%= @dmer.store_prop.description %></td>
    <td ><%= link_to "編集", edit_store_prop_path(@dmer.store_prop.id), class: "link" %></td>
    </tr>
    </table>
    <h1 >dメル詳細情報</h1>
      
    <table >
    <tr >
    <th >獲得日</th>
      <td ><%= @dmer.get_date %></td>
      <th >獲得者</th>
      <td ><%= @dmer.user.name %></td>
    </tr>

    <tr >
      <th >管理番号</th>
      <td ><%= @dmer.customer_num %></td>
      <th >商流</th>
      <td ><%= @dmer.client %></td>
    </tr>

    <tr >
      <th >審査ステータス</th>
      <td ><%= @dmer.status %></td>
      <th >入金日</th>
      <td ><%= @dmer.payment %></td>
    </tr>

    <tr >
      <th >決済日</th>
      <td ><%= @dmer.settlement %></td>
      <th >決済期限</th>
      <td ><%= @dmer.settlement_deadline %></td>
    </tr>

    <tr >
      <th >評価売上</th>
      <td ><%= @dmer.valuation_profit %></td>
      <th >実売上</th>
      <td ><%= @dmer.actual_profit %></td>
    </tr>

    <tr >
      <th >備考</th>
      <td colspan="2"><%= @dmer.description %></td>
    <td >
      <%= link_to "編集", edit_dmer_path, class: "link" %>
    </td>
    </tr>
    </table>
  </main>
</div>

