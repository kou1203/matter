<div data-scope-path="dmers/index">
<% days = ["日", "月", "火", "水", "木", "金", "土"] %>
  <h1>dメル一覧</h1>
  <%= render "shared/header" %>
  <%= form_with url: import_dmers_path do |f| %>
    <table >
      <tr>
        <td class="csv-label">CSV</td>
        <td class="csv-td"><%= f.file_field :file, accept: ".csv", class: "csv-text" %></td>
        <td class="result"><%= f.submit  "インポート", class: "result-btn",data: { confirm: 'インポートしますか？' } %></td>
      </tr>
    </table>
  <% end %>
    <%= search_form_for @q do |f| %>
      <table>
        <tr >
          <th class="search" colspan="2">獲得日付</th>
          <th class="search" colspan="2">初回決済日</th>
          <th class="search" colspan="2">決済期限</th>
        </tr>
        <tr>
          <td ><%= f.date_field :date_gteq, class: "date-input" %>~</td>
          <td ><%= f.date_field :date_lteq, class: "date-input" %></td>
          <td ><%= f.date_field :settlement_gteq, class: "input" %>~</td>
          <td ><%= f.date_field :settlement_lteq, class: "input" %></td>
          <td ><%= f.date_field :settlement_deadline_gteq, class: "input" %>~</td>
          <td ><%= f.date_field :settlement_deadline_lteq, class: "input" %></td>
        </tr>
      </table>

      <table >
        <tr >
          <th class="search">申し込み番号</th>
          <th class="search">獲得者</th>
          <th class="search">審査ステータス</th>
          <th class="search">決済ステータス</th>
          <th class="search">商流</th>
          <td class="result"><%= f.submit "絞込み", class: "result-btn" %></td>
        </tr>
        <tr >
          <td><%= f.text_field :customer_num_eq, class: "input" %></td>
          <td><%= f.text_field :user_name_cont, class: "input" %></td>
          <td><%= f.select :status_eq, options_from_collection_for_select(Dmer.select(:status).distinct,:status, :status),{include_blank: true}, {class: "input"} %></td>
          <td><%= f.select :status_settlement_eq, options_from_collection_for_select(Dmer.select(:status_settlement).distinct,:status_settlement, :status_settlement),{include_blank: true}, {class: "input"} %></td>
          <td ><%= f.select :client_eq, options_from_collection_for_select(Dmer.select(:client).distinct, :client, :client), {include_blank: true}, {class: "input"} %></td>
          <td class="reset"><%= link_to "絞込みリセット", dmers_path, class: "reset-link" %></td>
        </tr>
      </table>
    <% end %>
      <hr>
      
    <div>

    </div>
      <div class="warning"><%= alert %></div>
      <% if @dmers.empty? %>
      <% else %>
      <h1>表示範囲：<%= @dmers.minimum(:date) %>（<%= days[@dmers.minimum(:date).wday] %>）〜<%= @dmers.maximum(:date) %>（<%= days[@dmers.maximum(:date).wday] %>）</h1>
        <% settlement_subject = @dmers.where.not(settlement_deadline: nil).length %>
        <% settlement_done = @dmers.where.not(settlement: nil).length %>
        <% settlement_expired = @dmers.where(settlement: nil).where(settlement_deadline: Time.now.years_ago(5)..Time.now).length  %>
        <% dmer_sum = @dmers.where.not(status: "申込取消").where.not(status: "審査NG").where.not(status: "自社不備").sum(:profit_new) %>
        <% hubi = @dmers.where(status: '自社不備' ).length %>
        <% client_hubi = @dmers.where(status: '上位店不備' ).length %>
        <% ng = @dmers.where(status: '自社NG' ).length %>
        <% client_ng = @dmers.where(status: '上位店NG' ).length %>
        <% cancel = @dmers.where(status: '申込取消' ).length %>
    <div style="display: flex;">
      <table class="status-tb">
        <tr>
          <th class="search">獲得件数</th>
          <th class="search">入金待ち</th>
          <th class="search">審査待ち</th>
          <th class="search">複数追加</th>
          <th class="search">不備</th>
          <th class="search">NG</th>
        </tr>
        <tr>
          <td ><%= @dmers.length %></td>
          <td ><%= @dmers.where(status: '入金待ち' ).length %></td>
          <td ><%= @dmers.where(status: '審査待ち').length %></td>
          <td ><%= @dmers.where(status: '複数追加' ).length %></td>
          <td ><%= hubi + client_hubi %></td>
          <td ><%= @dmers.where(status: '自社NG' ).length + @dmers.where(status: '上位店NG' ).length %></td>
        </tr>
        <tr >
          <th class="search">決済対象</th>
          <th class="search">決済完了</th>
          <th class="search">決済期限切れ件数</th>
          <th class="search">決済完了率</th>
          <th class="search">自社不備</th>
          <th class="search">上位店不備</th>
          <th class="search">不備率</th>
        </tr>

        <tr >
          <td><%= settlement_subject %></td>
          <td ><%= settlement_done %></td>
          <td ><%= settlement_expired %></td>
          <td ><%= number_to_percentage(settlement_done.to_f / settlement_subject.to_f * 100, precision: 1) rescue "-" %></td>
          <td ><%= hubi %></td>
          <td ><%= client_hubi %></td>
          <td ><%= number_to_percentage( (hubi + client_hubi).to_f / @dmers.length.to_f * 100, precision: 1) rescue "-" %></td>
        </tr>
        <tr >
          <th class="search">上位店NG</th>
          <th class="search">自社NG</th>
          <th class="search">申込取消</th>
          <th class="search">上位店NG率</th>
        </tr>
        <tr >
          <td ><%= ng %></td>
          <td ><%= client_ng %></td>
          <td ><%= cancel %></td>
          <td ><%= number_to_percentage( (ng + client_ng + cancel).to_f / @dmers.length.to_f * 100, precision: 1) rescue "-" %></td>
        </tr>
      </table>
      <div>
      <h2>ステータス比率</h2>
        <%= pie_chart @dmers.group(:status).count, width:'400px' %>
      </div>
    </div>
      <table class="table">
    <tr class="table-row">
      <th ></th>
      <th ><%= sort_link(@q, :date, "獲得日",{}, {class: "reset-link"}) %></th>
      <th >法人/個人</th>
      <th >複数店</th>
      <th >店舗名</th>
      <th >獲得者</th>
      <th >審査ステータス</th>
      <th >初回決済日</th>
      <th >決済期限</th>
      <th >入金日</th>
    </tr>
    <% @dmers.find_each do |dmer| %>
    <tr class="index-tr">
      <td class="index-td"><%= link_to "詳細",  dmer_path(dmer.id) ,class: "link" %></td>
      <td class="index-td"><%= dmer.date.month %>月<%= dmer.date.day %>日</td>
      <td class="index-td"><%= dmer.store_prop.race %></td>
      <% if dmer.store_prop.head_store.blank? %>
        <td class="index-td"></td>
      <% elsif dmer.store_prop.head_store == dmer.store_prop.name %>
        <td class="index-td">複数店本店</td>
      <% else %>
        <td class="index-td">本店名(<%= dmer.store_prop.head_store %>)</td>
      <% end %>
      <td class="index-td"><%= dmer.store_prop.name %></td>
      <td class="index-td"><%= dmer.user.name %></td>
      <td class="index-td"><%= dmer.status %></td>
      <% if dmer.settlement.nil? %>
      <td class="index-td"></td>
      <% else %>
      <td class="index-td"><%= dmer.settlement %></td>
      <% end %>
      <td class="index-td"><%= dmer.settlement_deadline %></td>
      <td class="index-td"><%= dmer.payment %></td>

    </tr>
    <% end %>
    </table>
  <% end %>
</div>