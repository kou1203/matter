<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<header>
    <div class="sign-bar">
    <% if current_user.name == "管理用" %>
    <span data-turbolinks="false">
      <%= link_to "製品テストページ", product_tests_path, class: "sign-text" %>
    </span>
    <% end %>
      <%= link_to "< Home >", root_path, class: "sign-text" %>
    <% if user_signed_in? %>
      <%= link_to current_user.name, user_path(current_user.id), class: "sign-text" %><span class="sign-text">/</span>
      <%= link_to "ログアウト", destroy_user_session_path,method: :delete, class: "sign-text" %>
    <% else %>
      <%= link_to "新規登録", new_user_registration_path, class: "sign-text" %><span class="sign-text">/</span>
      <%= link_to "ログイン", new_user_session_path, class: "sign-text" %>
    <% end %>
    </div>
</header>