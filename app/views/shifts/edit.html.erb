<div data-scope-path="shifts/edit">
  <h1>シフト入力：<%= current_user.name %></h1>
  <%= render "shared/header" %>
  <%= form_with model: @shift, class: "form-frame", local: true do |f| %>
  <table>
  <%# 一列目 %>
    <tr>
      <th class="date-th">日</th>
      <th class="date-th">付</th>
      <td class="date-td"><%= f.number_field :year, class: "input" %></td>
      <th class="date-th">年</th>
      <td class="date-td"><%= f.number_field :month, class: "input" %></td>
      <th class="date-th">月</th>
    </tr>
  </table>
  <table>
  <%# 2列目ラベル %>
    <tr>
      <th><%= f.label :house_work, "内勤日数", class: "form-text" %></th>
      <th><%= f.label :ojt, "OJT日数", class: "form-text" %></th>
      <th><%= f.label :cashless_new, "キャッシュレス新規日数", class: "form-text" %></th>
      <th><%= f.label :cashless_settlement, "キャッシュレス決済日数", class: "form-text" %></th>
    </tr>
  <%# 2列目値 %>
    <tr>
      <td><%= f.number_field :house_work,class: "form-input" %></td>
      <td><%= f.number_field :ojt,class: "form-input" %></td>
      <td><%= f.number_field :cashless_new,class: "form-input" %></td>
      <td><%= f.number_field :cashless_settlement,class: "form-input" %></td>
    </tr>
  <%# 3列目ラベル %>
    <tr>
      <th><%= f.label :praness, "ぷらねす日数", class: "form-text" %></th>
      <th><%= f.label :summit, "サミットエナジー日数", class: "form-text" %></th>
      <th><%= f.label :panda, "フードパンダ日数", class: "form-text" %></th>
      <th><%= f.label :goal, "目標売上日数", class: "form-text" %></th>
    </tr>
  <%# 3列目値 %>
    <tr>
      <td><%= f.number_field :praness,class: "form-input"  %></td>
      <td><%= f.number_field :summit,class: "form-input"  %></td>
      <td><%= f.number_field :panda,class: "form-input"  %></td>
      <td><%= f.number_field :goal,class: "form-input"  %></td>
    </tr>
  <%# 4列目ラベル %>
    <tr>
      <th><%= f.label :n, "N対策日数", class: "form-text" %></th>
      <th><%= f.label :rakuten_casa, "楽天カーサ日数", class: "form-text" %></th>
      <th></th>
      <th></th>
    </tr>
  <%# 4列目値 %>
    <tr>
      <td><%= f.number_field :n,class: "form-input"  %></td>
      <td><%= f.number_field :rakuten_casa,class: "form-input"  %></td>
      <td></td>
      <td></td>
    </tr>
  </table>
    <%= f.submit "登録", class: "submit-btn" %>
  <% end %>
  </main>
</div>