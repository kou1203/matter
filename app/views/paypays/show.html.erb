<%= render "shared/header" %>

<div class="main">
  <%= render "shared/side_bar" %>
  <main class="right-bar">
  <h1>PayPay詳細</h1>
  <div class="main">
  <div>
    <h1 class="show-title">店舗情報</h1>
    <table class="table">
    <tr class="table-row">
    <th class="thead">店舗名</th>
    <td class="tdata"><%= @paypay.store_prop.name %></td>
    </tr>
    <th class="thead">属性</th>
    <td class="tdata"><%= @paypay.store_prop.race %></td>
    <th class="thead">業種</th>
    <td class="tdata"><%= @paypay.store_prop.industry %></td>
    <tr class="table-row">
    </tr>
    <tr class="table-row">
    <tr class="table-row">
    <tr class="table-row">
    <th class="thead">店舗代表</th>
    <td class="tdata"><%= @paypay.store_prop.person_main %></td>
    <th class="thead">店舗担当</th>
    <td class="tdata"><%= @paypay.store_prop.person_sub %></td>
    </tr>
    </table>
    <table class="table">
    <tr class="table-row">
    <th class="thead">店舗住所</th>
    <td class="tdata-long"><%= @paypay.store_prop.prefectures %><%= @paypay.store_prop.city %><%= @paypay.store_prop.municipalities %><%= @paypay.store_prop.address %><%= @paypay.store_prop.building_name %></td>
    </table>
    <h1 class="show-title">連絡先</h1>
    <table class="table">
    <th class="thead">電話番号1</th>
    <td class="tdata"><%= @paypay.store_prop.phone_number_1 %></td>
    <th class="thead">電話番号2</th>
    <td class="tdata"><%= @paypay.store_prop.phone_number_2 %></td>
    <th class="thead">好適時間</th>
    <td class="tdata"><%= @paypay.store_prop.suitable_time %></td>
    </tr>
    <tr class="table-row">
    <th class="thead">備考</th>
    <td class="tdata"><%= @paypay.store_prop.description %></td>
    </tr>
    </table>
    <button class="edit-btn"> 
      <%= link_to "編集", edit_store_prop_path(@paypay.store_prop.id), class: "link" %>
    </button>
    <h1 class="show-title">PayPay</h1>
      
    <table class="table">
    <tr class="table-row">
    <th class="thead">獲得日</th>
      <th class="thead">獲得者</th>
    </tr>
    <tr class="table-row">
      <td class="tdata"><%= @paypay.get_date %></td>
      <td class="tdata"><%= @paypay.user.name %></td>
    </tr>
    </table>

    <table class="table">
    <tr class="table-row">
      <th class="thead">審査ステータス</th>
    </tr>
    <tr class="table-row">
      <td class="tdata"><%= @paypay.status %></td>
    </tr>
    </table>

    <table class="table">
    <tr class="table-row">
      <th class="thead">入金日</th>
      <th class="thead">決済日</th>
      <th class="thead">決済日（写真）</th>
      <th class="thead">商流</th>
      <th class="thead">備考</th>
    </tr>
    <tr class="table-row">
      <td class="tdata"><%= @paypay.payment %></td>
      <td class="tdata"><%= @paypay.client %></td>
    </tr>
    </table>
  <button class="edit-btn">
    <%= link_to "編集", edit_paypay_path, class: "link" %>
  </button>
  </main>
</div>

