<div data-scope-path="paypays/show">
  <h1>PayPay詳細</h1>
  <%= render "shared/header" %>
  
  
    <table>
    <tr>
    <th colspan="4">店舗情報</th>
    </tr>
    <tr>
    <th>店舗名</th>
    <td><%= @paypay.store_prop.name %></td>
    </tr>
    <th>属性</th>
    <td><%= @paypay.store_prop.race %></td>
    <th>業種</th>
    <td><%= @paypay.store_prop.industry %></td>
    </tr>
    <tr>
    <th>店舗代表</th>
    <td><%= @paypay.store_prop.person_main_name %></td>
    <th>店舗担当</th>
    <td><%= @paypay.store_prop.person_sub_name %></td>
    </tr>
    <tr>
    <th>店舗住所</th>
    <td colspan="3"><%= @paypay.store_prop.prefecture %><%= @paypay.store_prop.city %><%= @paypay.store_prop.municipalities %><%= @paypay.store_prop.address %><%= @paypay.store_prop.building_name %></td>
    </tr>
    </table>
    <h1>連絡先</h1>
    <table>
      <tr>
        <th>電話番号1</th>
        <td><%= @paypay.store_prop.phone_number_1 %></td>
        <th>電話番号2</th>
        <td><%= @paypay.store_prop.phone_number_2 %></td>
        </tr>
        <th>好適時間</th>
        <td><%= @paypay.store_prop.suitable_time %></td>
        <tr>
        <th>備考</th>
        <td><%= @paypay.store_prop.description %></td>
        <td> <%= link_to "編集", edit_store_prop_path(@paypay.store_prop.id), class: "link" %></td>
      </tr>
    </table>
    <h1>PayPay情報</h1>
      
    <table>
    <tr>
    <th>獲得日</th>
      <td><%= @paypay.date %></td>
      <th>獲得者</th>
      <td><%= @paypay.user.name %></td>
    </tr>
    <tr>
      <th>商流</th>
      <td><%= @paypay.client %></td>
      <th colspan="2"></th>
    </tr>
    <tr>
      <th>審査ステータス</th>
      <td><%= @paypay.status %></td>
      <th>ステータス更新日</th>
      <td><%= @paypay.status_update %></td>
    </tr>
    <tr>
      <th>入金日</th>
      <td><%= @paypay.payment %></td>
      <td><%= link_to "編集", edit_paypay_path, class: "link" %></td>
    </tr>
    <tr>
      <th>評価売上</th>
      <td><%= @paypay.valuation %></td>
      <th>実売上</th>
      <td><%= @paypay.profit %></td>
    </tr>
    </table>
</div>

