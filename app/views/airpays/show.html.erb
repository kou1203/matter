<div data-scope-path="shared/header">
  <h1 >AirPay詳細</h1>
  <%= render "shared/header" %>
</div>
<div style="display:flex;">
<div data-scope-path="shared/side_bar">
  <%= render "shared/sidebar" %>
</div>
<div data-scope-path="shares/show">
  <h2>店舗情報</h2>
    <table >
    <tr>
    <th >店舗名</th>
    <td ><%= @airpay.store_prop.name %></td>
    <th >区分</th>
    <td ><%= @airpay.store_prop.race %></td>
    </tr>
    <th >業種</th>
    <td ><%= @airpay.store_prop.industry %></td>
    <th>本店名</th>
    <td ><%= @airpay.store_prop.head_store %></td>
    <tr >
    </tr>
    <tr >
    <th >店舗代表</th>
    <td ><%= @airpay.store_prop.person_main_name %></td>
    <th >店舗担当</th>
    <td ><%= @airpay.store_prop.person_sub_name %></td>
    </tr>
    <tr >
    <th >店舗住所</th>
    <td colspan="3"><%= @airpay.store_prop.prefecture %><%= @airpay.store_prop.city %><%= @airpay.store_prop.municipalities %><%= @airpay.store_prop.address %><%= @airpay.store_prop.building_name %></td>
    </table>
    <h2 >連絡先</h2>
    <table >
    <tr>
    <th >電話番号1</th>
    <td ><%= @airpay.store_prop.phone_number_1 %></td>
    <th >電話番号2</th>
    <td ><%= @airpay.store_prop.phone_number_2 %></td>
    </tr>
    <tr >
    <th >メールアドレス１</th>
      <td ><%= @airpay.store_prop.mail_1 %></td>
    <th >メールアドレス２</th>
      <td ><%= @airpay.store_prop.mail_2 %></td>
    </tr>
    <tr >
    <th >好適時間</th>
    <td ><%= @airpay.store_prop.suitable_time %></td>
    <th >定休日</th>
    <td ><%= @airpay.store_prop.holiday %></td>
    </tr>
    <tr >
    <th >備考</th>
    <td colspan="2"><%= @airpay.store_prop.description %></td>
    <td ><%= link_to "編集", edit_store_prop_path(@airpay.store_prop.id), class: "link" %></td>
    </tr>
    </table>
    <h2 >AirPay情報</h2>
    <table >
    <tr >
    <th >獲得日</th>
      <td ><%= @airpay.date %></td>
      <th >獲得者</th>
      <td ><%= @airpay.user.name %></td>
    </tr>

    <tr >
      <th >店舗番号</th>
      <td ><%= @airpay.customer_num %></td>
      <th colspan="2"></th>
    </tr>

    <tr >
      <th >審査ステータス</th>
      <td ><%= @airpay.status %></td>
      <th >審査ステータス更新日</th>
      <td ><%= @airpay.status_update %></td>
    </tr>
    <tr>
      <th >お申込者様に関する確認</th>
      <td ><%= @airpay.customer_conf %></td>
      <th >決済を行う店舗に関する確認</th>
      <td ><%= @airpay.slmt_conf %></td>
    </tr>
    <tr>
      <th >口座情報に関する確認</th>
      <td ><%= @airpay.cash_conf %></td>
      <th >疑出し内容</th>
      <td ><%= @airpay.doubt_remarks %></td>
    </tr>
    <tr>
      <th >QR同時申込有無</th>
      <td ><%= @airpay.qr_flag %></td>
      <th >iPadCPN申込有無</th>
      <td ><%= @airpay.ipad_flag %></td>
    </tr>
    <tr>
      <th >書類提出期限</th>
      <td ><%= @airpay.doc_deadline %></td>
      <th >書類フォロー</th>
      <td ><%= @airpay.doc_follow %></td>
    </tr>
    <tr>
      <th >端末受取日</th>
      <td ><%= @airpay.shipping %></td>
      <th >端末受取状態</th>
      <td ><%= @airpay.delivery_status %></td>
    </tr>
    <tr>
      <th >アクティベート日</th>
      <td ><%= @airpay.activate %></td>
      <th colspan="2"></th>
    </tr>

  </table>
  <h2>利益/入金日</h2>
  <table>
    <tr>
      <th >審査完了日</th>
      <td ><%= @airpay.result_point %></td>
      <th >評価売</th>
      <td ><%= @airpay.valuation %></td>
    </tr>
    <tr>

    <% if current_user.position == "権限①" %>
      <th >入金日</th>
      <td ><%= @airpay.payment %></td>
      <th >実売</th>
      <td ><%= @airpay.profit %></td>
    </tr>
    <% else %>
    <% end %>
    </table>
  </div>
</div>