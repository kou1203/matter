<div data-scope-path="shared/header">
  <h1>店舗情報入力</h1>
  <%= render "shared/header" %>
</div>
<div style="display:flex;"><%# フレックス %>
  <div data-scope-path="shared/side_bar">
    <%= render "shared/sidebar" %>
  </div>
  <div data-scope-path="shared/form"><%# CSSスコープ %>
    <div class="form-main"><%# フォーム外枠 %>
      <div class="form-title">
        <h2>基本情報</h2>
      </div>
      <%= form_with model: @store_prop, class: "form-frame", local: true do |f| %>
        <div class="form">
            <p><%= f.label :head_store, "本店名（複数点のみ）", class: "form-text" %></p>
            <p><%= f.text_field :head_store, class: "input" %></p>
        </div>
        <div class="form">
            <p><%= f.label :name, "店舗名", class: "form-text" %></p>
            <p><%= f.text_field :name , class: "input" %></p>
        </div>
        <div class="form">
            <p><%= f.label :race, "区分", class: "form-text" %></p>
            <p><%= f.select :race , {"個人": "個人", "法人": "法人"},{include_blank: "選択してください"}, {class: "slct-input"} %></p>
        </div>
        <div class="form">
            <p><%= f.label :industry, "業種", class: "form-text" %></p>
            <p><%= f.select :industry, { "飲食": "飲食","小売": "小売", "サービス": "サービス"} ,{include_blank:"選択してください"}, {class: "slct-input"} %></p>
        </div>
        <h2>法人情報</h2>
        <div class="form">
            <p><%= f.label :corporate_name, "法人名", class: "form-text" %></p>
            <p><%= f.text_field :corporate_name , class: "input" %></p>
        </div>
        <div class="form">
            <p><%= f.label :corporate_num, "法人番号", class: "form-text" %></p>
            <p><%= f.number_field :corporate_num , class: "input" %></p>
        </div>
        <div class="form">
            <p><%= f.label :corporate_address, "法人住所", class: "form-text" %></p>
            <p><%= f.text_field :corporate_address , class: "input" %></p>
        </div>
            <h2>店舗担当者情報①（性別：
              <%= f.radio_button :gender_main, "男性" %>
              <%= f.label :gender_main, "男性",value: "男性", checked: true, class: "radio-btn" %>
              <%= f.radio_button :gender_main,"女性" %>
              <%= f.label :gender_main, "女性", value: "女性",class: "radio-btn" %>
            ）
            </h2>
        <div class="form">
          <p><%= f.label :person_main_name, "名前", class: "form-text" %></p>
          <p><%= f.text_field :person_main_name , class: "input" %></p>            
        </div>
        <div class="form">
            <p><%= f.label :person_main_kana, "フリガナ", class: "form-text" %></p>
            <p><%= f.text_field :person_main_kana , class: "input" %></p>
        </div>
        <div class="form">
            <p><%= f.label :person_main_class, "役職", class: "form-text" %></p>
            <p><%= f.text_field :person_main_class , class: "input" %></p>
        </div>
        <div class="form">
            <p><%= f.label :birthday, "生年月日", class: "form-text" %></p>
            <p><%= f.date_select :person_main_birthday,{start_year: 1950, prompt:"--"}, {class: "num-input"} %></p>
        </div>
          <h2>店舗担当者情報②（性別：
            <%= f.radio_button :gender_sub, "男性" %>
            <%= f.label :gender_sub, "男性",value: "男性", checked: true, class: "radio-btn" %>
            <%= f.radio_button :gender_sub,"女性" %>
            <%= f.label :gender_sub, "女性", value: "女性",class: "radio-btn" %>
            <%= f.radio_button :gender_sub,"" %>
            <%= f.label :gender_sub, "なし", value: "",class: "radio-btn" %>
          ）
          </h2>
        <div class="form">
            <p><%= f.label :person_sub_name, "名前", class: "form-text" %></p>
            <p><%= f.text_field :person_sub , class: "input" %></p>
        </div>
        <div class="form">
            <p><%= f.label :person_sub_kana, "フリガナ", class: "form-text" %></p>
            <p><%= f.text_field :person_sub_kana , class: "input" %></p>
        </div>
        <div class="form">
            <p><%= f.label :person_sub_class, "役職", class: "form-text" %></p>
            <p><%= f.text_field :person_sub_class , class: "input" %></p>
        </div>
        <div class="form">
            <p><%= f.label :birthday, "生年月日", class: "form-text" %></p>
            <p><%= f.date_select :person_sub_birthday,{start_year: 1950, prompt:"--"}, {class: "num-input"} %></p>
        </div>
        <h2>連絡先</h2>
        <div class="form">
            <p><%= f.label :phone_number_1, "電話番号１", class: "form-text" %></p>
            <p><%= f.text_field :phone_number_1 , class: "input" %></p>
        </div>
        <div class="form">
            <p><%= f.label :phone_number_2, "電話番号２", class: "form-text" %></p>
            <p><%= f.text_field :phone_number_2 , class: "input" %></p>
        </div>
        <div class="form">
            <p><%= f.label :mail_1, "メールアドレス１", class: "form-text" %></p>
            <p><%= f.text_field :mail_1, class: "input" %></p>
        </div>
        <div class="form">
            <p><%= f.label :mail_2, "メールアドレス2", class: "form-text" %></p>
            <p><%= f.text_field :mail_2, class: "input" %></p>
        </div>

        <h2>店舗住所/その他情報</h2>
        <div class="form">
            <p><%= f.label :prefecture, "都道府県", class: "form-text" %></p>
            <p><%= f.text_field :prefecture , class: "input" %></p>
        </div>
        <div class="form">
            <p><%= f.label :city, "市区", class: "form-text" %></p>
            <p><%= f.text_field :city , class: "input" %></p>
        </div>
        <div class="form">
            <p><%= f.label :municipalities, "町村", class: "form-text" %></p>
            <p><%= f.text_field :municipalities , class: "input" %></p>
        </div>
        <div class="form">
            <p><%= f.label :address, "番地", class: "form-text" %></p>
            <p><%= f.text_field :address , class: "input" %></p>
        </div>
        <div class="form">
            <p><%= f.label :building_name, "建物名", class: "form-text" %></p>
            <p><%= f.text_field :building_name , class: "input" %></p>
        </div>
        <h2>休日・好適時間</h2>
        <div class="form">
            <p><%= f.label :holiday, "定休日", class: "form-text" %></p>
            <p><%= f.text_field :holiday ,class: "input" %></p>
        </div>
        <div class="form">
            <p><%= f.label :suitable_time, "好適時間", class: "form-text" %></p>
            <p><%= f.text_field :suitable_time , class: "input" %></p>
        </div>
        <div class="form">
            <p><%= f.label :description, "備考", class: "form-text" %></p>
            <p><%= f.text_field :description , class: "input" %></p>
        </div>
    </div><%# フォーム外枠 %>
        <div class="form-submit">
            <%= f.submit "登録", class: "submit-btn",data: { confirm: "登録してもよろしいですか？" }  %>
        </div>
    <% end %>
  </div><%# CSSスコープ %>
</div><%# フレックス %>