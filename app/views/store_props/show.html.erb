<div data-scope-path="shared/header">
  <h1 class="sub-title">店舗詳細</h1>
  <%= render "shared/header" %>
</div>
<div style="display:flex;">
<div data-scope-path="shared/side_bar">
  <%= render "shared/sidebar" %>
</div>
<div data-scope-path="shares/show">
<div class="main">
    <h2>店舗情報</h2>
    <table >
      <tr>
        <th>店舗名</th>
        <td><%= @store_prop.name %></td>
        <th>本店名</th>
        <% if @store_prop.name == @store_prop.head_store %>
        <td>本店</td>
        <% elsif @store_prop.head_store.nil? %>
        <td>複数店なし</td>
        <% else %>
        <td><%= @store_prop.head_store %></td>
        <% end %>
      </tr>
      <tr >
        <th>法人/個人</th>
        <td><%= @store_prop.race %></td>
        <th>業種</th>
        <td><%= @store_prop.industry %></td>
      </tr>
      <th>店舗住所</th>
        <td colspan="3"><%= @store_prop.prefecture %><%= @store_prop.city %><%= @store_prop.municipalities %><%= @store_prop.address %><%= @store_prop.building_name %></td>
      </tr>

      <tr >
        <th>法人名</th>
        <td><%= @store_prop.corporate_name %></td>
        <th>法人番号</th>
        <td><%= @store_prop.corporate_num %></td>
      </tr>
      <tr>
        <th>法人住所</th>
        <td colspan="3"><%= @store_prop.corporate_address %></td>
      </tr>
      <tr>
    </table>
    <h2>担当者情報</h2>
    <table>
      <tr >
        <th colspan="4">店舗担当者①</th>
      </tr>
    <tr>
      <th>性別</th>
        <td><%= @store_prop.gender_main %></td>
        <th colspan="2"></th>
    <tr>
    <tr>
      <th>名前</th>
        <td><%= @store_prop.person_main_name %></td>
      <th>フリガナ</th>
        <td><%= @store_prop.person_main_kana %></td>
    </tr>
    <tr>
      <th>生年月日</th>
        <td><%= @store_prop.person_main_birthday %></td>
      <th>役職</th>
        <td><%= @store_prop.person_main_class %></td>
      
    </tr>
    <tr>
      <th colspan="4">店舗担当者②</th>
    </tr>
    <tr>
      <th>性別</th>
        <td><%= @store_prop.gender_sub %></td>
      <th colspan="2"></th>
    </tr>
    <tr>
      <th>名前</th>
        <td><%= @store_prop.person_sub_name %></td>
      <th>フリガナ</th>
        <td><%= @store_prop.person_sub_kana %></td>
    </tr>
    <tr>
      <th>生年月日</th>
        <td><%= @store_prop.person_sub_birthday %></td>
      <th>役職</th>
        <td><%= @store_prop.person_sub_class %></td>
    </tr>
    </table>
    <table >
    </table>
        <h2>連絡先</h2>
    <table >
      <tr>
      <th>電話番号1</th>
        <td><%= @store_prop.phone_number_1 %></td>
      <th>電話番号2</th>
        <td><%= @store_prop.phone_number_2 %></td>
      </tr>
      <tr>
      <th>メールアドレス1</th>
        <td><%= @store_prop.mail_1 %></td>
      <th>メールアドレス2</th>
        <td><%= @store_prop.mail_2 %></td>
      </tr>
      <tr >
      <th>好適時間</th>
        <td><%= @store_prop.suitable_time %></td>
      <th>定休日</th>
        <td><%= @store_prop.holiday %></td>
      </tr>
      <tr>
        <th>備考</th>
        <td colspan="2"><%= @store_prop.description %></td>
        <td><%= link_to "編集", edit_store_prop_path, class: "link" %></td>
      </tr>
    </table>
  <% if current_user.position == "権限①" %>
    <h2>商材獲得日</h2>
    <table>
      <tr >
        <th class="product-th">dメル</th>
        <% if @dmer.nil? %>
          <td><%= link_to "未獲得",new_dmer_path(store_id: @store_prop.id),class: "link" %></td>
        <% else %>
          <td ><%= link_to @store_prop.dmer.date, dmer_path(@store_prop.dmer.id),class: "link" %></td>
        <% end %>
        <th class="product-th">auペイ</th>
        <% if @aupay.nil? %>
          <td>未獲得</td>
        <% else %>
          <td ><%= link_to @store_prop.aupay.date, aupay_path(@store_prop.aupay.id),class: "link" %></td>
        <% end %>
      </tr>
      <tr>
        <th class="product-th">PayPay</th>
        <% if @paypay.nil? %>
          <td>未獲得</td>
        <% else %>
          <td ><%= link_to @store_prop.paypay.date, paypay_path(@store_prop.paypay.id),class: "link" %></td>
        <% end %>
        <th class="product-th">楽天ペイ</th>
        <% if @rakuten_pay.nil? %>
          <td>未獲得</td>
        <% else %>
          <td ><%= link_to @store_prop.rakuten_pay.date, rakuten_pay_path(@store_prop.rakuten_pay.id),class: "link" %></td>
        <% end %>
      </tr>
      <tr>
        <th class="product-th">出前館</th>
        <% if @demaekan.nil? %>
          <td>未獲得</td>
        <% else %>
          <td ><%= @store_prop.demaekan.date %></td>
        <% end %>
        <th class="product-th">AirPay</th>
        <% if @airpay.nil? %>
          <td>未獲得</td>
        <% else %>
          <td ><%= link_to @store_prop.airpay.date, airpay_path(@store_prop.airpay.id),class: "link" %></td>
        <% end %>
      </tr>
    </table>
  <% end %>
  </div>
  </div>
</div>