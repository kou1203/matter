
<div data-scope-path="users/new">
  <div class="frame">
    <div class="sign-in-frame">
      <h1 class="sign-title">ログイン</h1>
      <%= form_for(resource, as: resource_name,class: "form-frame" ,url: session_path(resource_name))do |f| %>
        <label class="form-text">メールアドレス</label><br>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-input" %><br>
        <label class="form-text">パスワード</label><br>
        <%= f.password_field :password, autocomplete: "current-password", class: "form-input" %><br>
        <%= f.submit "ログイン", class: "submit-btn" %>
      <% end %>
    </div>
  </div>
</div>

